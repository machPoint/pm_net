# OPAL Server Environment Variables
# Copy this file to .env and update the values

# Server Configuration
MCP_PORT=7788
NODE_ENV=development

# OPAL Mode Configuration
OPAL_MODE=persistent
OPAL_EPHEMERAL_TIMEOUT=1800000

# Legacy Mode Configuration (for backward compatibility)
MACHPOINT_MODE=persistent
MACHPOINT_EPHEMERAL_TIMEOUT=1800000

# Database Configuration (SQLite for development)
DB_FILE=./dev.sqlite3

# JWT Authentication
JWT_SECRET=your-secret-key-here
JWT_ACCESS_EXPIRY=2h
JWT_REFRESH_EXPIRY=7d

# OpenAI API (for embeddings)
OPENAI_API_KEY=your-openai-api-key

# Backup Configuration
BACKUP_DIR=./backups

# API Integrations (Example)
MCP_API_COUNT=1
MCP_API_0_NAME=fakestore
MCP_API_0_BASE_URL=https://fakestoreapi.com
MCP_API_0_AUTH_TYPE=none
MCP_API_0_RESOURCES_PATH=/products
MCP_API_0_RESOURCE_ID_PATH=/products/:id
